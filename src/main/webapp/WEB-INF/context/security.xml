<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/security
            http://www.springframework.org/schema/security/spring-security-3.2.xsd">
    <http auto-config="false" use-expressions="true" disable-url-rewriting="true">

        <intercept-url pattern="/welcome" access="isAnonymous()"/>
        <intercept-url pattern="/logout" access="isAuthenticated()"/>
        <intercept-url pattern="/API/login" access="permitAll()"/>
        <intercept-url pattern="/API/register" access="isAnonymous()"/>
        <intercept-url pattern="/API/random" access="permitAll()"/>

        <access-denied-handler error-page="/welcome?login=failed&amp;accessDenied" />

        <!-- Login -->
        <form-login  login-page="/welcome?login"
                     username-parameter="s_username"
                     password-parameter="s_password"
                     login-processing-url="/s_spring_security_login"
                     authentication-success-handler-ref="customSuccessHandler"
                     authentication-failure-url="/welcome?login=failed&amp;incorrectAccount"/>
        <session-management invalid-session-url="/welcome?sessionTimeout"/>
        <!-- Logout -->
        <logout logout-url="/logout"/>
        <logout delete-cookies="JSESSIONID"/>
        <logout logout-success-url=""/>

        <custom-filter ref="jwtAuthenticationFilter" before="BASIC_AUTH_FILTER"/>
    </http>

    <authentication-manager alias="authenticationManager">
        <authentication-provider user-service-ref="userDetailsServiceImpl">
            <password-encoder ref="bcryptEncoder"/>
        </authentication-provider>
    </authentication-manager>

    <!-- After login, return to the last visited page -->
    <beans:bean id="authenticationSuccessHandler" class="org.springframework.security.web.authentication.SavedRequestAwareAuthenticationSuccessHandler">
        <beans:property name="useReferer" value="true" />
    </beans:bean>

    <beans:bean id="userDetailsServiceImpl" class="learntogether.Service.UserDetailsServiceImpl"/>
    <beans:bean id="bcryptEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
    <beans:bean id="jwtAuthenticationFilter" class="learntogether.JWT.JwtAuthenticationFilter"/>

</beans:beans>